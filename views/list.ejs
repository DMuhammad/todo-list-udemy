<%- include("header") -%> 
    <div id="heading" class="box">
        <h1> <%= title %> </h1>
    </div>
    
    <div class="box">
       <% listItem.forEach(item => { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="check" value="<%=item._id%>" onchange="this.form.submit()">
                <p> <%= item.name %>  </p>
            </div>
            <input type="hidden" name="listName" value="<%=title%>">
        </form>
       <% }) %>
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="Kegiatan" autocomplete="off">
            <button type="submit" name="button" value="<%= title %>">+</button>
        </form>
    </div>
<%- include("footer") -%> 